{{>header}}
<div class="container" style="margin-bottom: 100px; margin-top: 80px">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">

            {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{# each messages }}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
            {{/if}}
            <form class="form-signin" action="/user/signup" method="POST">
                <h2 class="form-signin-heading text-center" style="font-family: 'Google Sans', 'Noto Sans Myanmar UI', 'arial', sans-serif;">Đăng Kí</h2>

                <label for="username" class="sr-only">Username</label>
                <input type="text" id="username" name="username" class="form-control" placeholder="Họ và tên" required>
                <br>
                <label for="email" class="sr-only">Email address</label>
                <input type="text" id="email" name="email" class="form-control" placeholder="Địa chỉ E-mail" required autofocus>
                <br>
                <label for="password" class="sr-only">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Mật khẩu" required>

<!--                <label for="inputConfirmPassword" class="sr-only">Confirm Password</label>-->
<!--                <input type="password" id="inputConfirmPassword" name="confirmationPassword" class="form-control" placeholder="Confirm Password" required>-->

                <br/>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button class="btn btn-lg btn-default btn-block" type="submit">Đăng kí</button>

            </form>
        </div>
    </div>
</div>

{{>footer}}

